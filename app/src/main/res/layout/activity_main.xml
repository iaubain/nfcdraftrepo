    <Spinner
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/products"
        android:textAlignment="center"
        android:prompt="@string/prod"
        android:textSize="20sp"
        style="@style/TextAppearance.AppCompat.Base.SearchResult" />
    <TextView
        android:id="@+id/txtTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Items Number"
        android:textSize="20sp"
        android:textColor="#a8bd32"
        android:layout_gravity="center_horizontal"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:background="@drawable/button_shape"
            android:text=" - "
            android:onClick="remove"
            android:id="@+id/remove" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="40sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/itemnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="40sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="40sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:background="@drawable/button_shape"
            android:text=" + "
            android:onClick="add"
            android:id="@+id/add" />
    </TableRow>

    <TextView
        android:id="@+id/txtpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="YOU PAY"
        android:textSize="23sp"
        android:textColor="#a8bd32"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Rwf"
        android:textSize="40sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/signalbox"
        android:background="@drawable/default_notification"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#4040c1"
            android:layout_gravity="center_horizontal|center_vertical"/>

    </TableRow>

</LinearLayout>
